
<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %>件のerrorが発生しました
 <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>
<%= form_with model:@book, url:update_book_path(@book),method: :patch, local:true do |f| %>

<p>
 <strong>Title</strong>
 <%= f.text_field :title %>
</p>

<p>
 <strong>Body</strong>
 <%= f.text_area :body %>
</p>

 <%= f.submit 'Update Book' %>


<% end %>

<%=link_to "Show",book_path(@book) %>
|
<%=link_to "Back",books_path %>